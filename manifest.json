{"manifest_version": 2,
  "name": "Capture area",
  "default_locale": "en",
  "description": "",
  "icons": {
    "128": "/images/screenshot.png"
  },
  "version": "1",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "/images/screenshot.png",
    "default_title": ""
  },
  
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "/scripts/jquery.min.js",
        "/scripts/Jcrop.js",
        "/scripts/overlay.js"

      ],
      "css": [
        "/css/Jcrop.css",
        "/css/style.css"
      ]
    }
  ]
}
